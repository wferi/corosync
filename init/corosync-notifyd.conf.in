# corosync-notifyd - Corosync Dbus and snmp notifier
#
# Starts corosync-notifyd

expect fork
respawn

env prog=corosync-notifyd
env sysconf=@CONFIGDIR@/corosync-notifyd

script
    [ -f "$sysconf" ] && . $sysconf
    exec $prog $OPTIONS
end script

pre-start script
    mkdir -p @localstatedir@/run
end script
